    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input class="btn btn-outline-danger" type="submit" value="Eliminar" /> 
        <a class="btn btn-outline-danger" asp-action="Index">Cancelar</a>
    </form>
